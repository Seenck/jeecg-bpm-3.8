	<!-- 拦截器 -->
	<mvc:interceptors>
		<!-- 用户同步到工作流 -->
		<mvc:interceptor>
			<mvc:mapping path="/**" />
			<bean class="org.jeecgframework.workflow.interceptors.SynUserInterceptor">
				<property name="includeUrls">
					<list>
						<value>userController.do?saveUser</value>
						<value>userController.do?delete</value>
					</list>
				</property>
